<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/suitcase_5"
    android:padding="10dp"
    tools:context=".CreateAccount">

    <ProgressBar
        android:id="@+id/crete_acct_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:background="@drawable/logo_register"
        android:layout_marginBottom="10dp"/>


    <LinearLayout
        android:id="@+id/acct_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="center_horizontal"
            android:text="Signup to SuitCase"
            android:shadowColor="#0B0B0B"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textAllCaps="false"
            android:textColor="#FDFBFB"
            android:textSize="24sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            android:textColor="#DAF8F5F5"
            android:textColorHint="@color/md_theme_dark_inverseSurface"
            app:boxBackgroundColor="#5B020202"
            app:helperTextTextColor="@color/md_theme_dark_inverseSurface"
            app:hintTextColor="@color/md_theme_dark_inverseSurface"
            app:placeholderTextColor="@color/md_theme_dark_inverseSurface"
            app:prefixTextColor="@color/md_theme_dark_inverseSurface"
            app:suffixTextColor="@color/md_theme_dark_inverseSurface">

            <!--this is the actual edit text which takes the input-->
            <EditText
                android:id="@+id/email_account"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#F6F4F4" />


        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter password"
            android:textColor="#DAF8F5F5"
            android:textColorHint="@color/md_theme_dark_inverseSurface"
            app:boxBackgroundColor="#5B020202"
            app:helperTextTextColor="@color/md_theme_dark_inverseSurface"
            app:hintTextColor="@color/md_theme_dark_inverseSurface"
            app:placeholderTextColor="@color/md_theme_dark_inverseSurface"
            app:prefixTextColor="@color/md_theme_dark_inverseSurface"
            app:suffixTextColor="@color/md_theme_dark_inverseSurface"
            app:endIconMode="password_toggle">

            <EditText
                android:id="@+id/password_account"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#FAFAFA" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/filledTextField3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Re-enter password"
            android:textColor="#DAF8F5F5"
            android:textColorHint="@color/md_theme_dark_inverseSurface"
            app:boxBackgroundColor="#5B020202"
            app:helperTextTextColor="@color/md_theme_dark_inverseSurface"
            app:hintTextColor="@color/md_theme_dark_inverseSurface"
            app:placeholderTextColor="@color/md_theme_dark_inverseSurface"
            app:prefixTextColor="@color/md_theme_dark_inverseSurface"
            app:suffixTextColor="@color/md_theme_dark_inverseSurface"
            app:endIconMode="password_toggle">

            <EditText
                android:id="@+id/re_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#FAFAFA" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/create_acct_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#AB705545"
            android:text="@string/create_account"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/or"
            android:textColor="#FDFBFB"
            android:shadowColor="#0B0B0B"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center_horizontal"
            android:shadowColor="#0B0B0B"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Login to your SuitCase"
            android:textAllCaps="false"
            android:textColor="#FDFBFB"
            android:textSize="18sp" />

        <Button
            android:id="@+id/login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#AB705545"
            android:text="Login"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>